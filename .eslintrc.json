{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "arrow-body-style": "error",
    "arrow-spacing": "error",
    "eqeqeq": "error",
    "no-eq-null": "error",
    "no-eval": "error",
    "no-extend-native": "error",
    "no-duplicate-imports": "error",
    "no-mixed-requires": "error",
    "no-var": "error",
    "object-shorthand": "error",
    "prefer-spread": "error",
    "quotes": [
      "error",
      "double",
      {
        "allowTemplateLiterals": true
      }
    ],
    "strict": "error"
  }
}
